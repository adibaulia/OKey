<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.okey.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            >
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Isi Data Tukang Kunci"
                android:textSize="20dp"
                />

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama:"
                />

            <EditText
                android:id="@+id/namaTukang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Latitude"
                />

            <EditText
                android:id="@+id/latitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Longitude"
                />

            <EditText
                android:id="@+id/longitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Hape"
                />

            <EditText
                android:id="@+id/nomorhp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spesifikasi"
                />

            <EditText
                android:id="@+id/spesifikasi"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
            <Button
                android:id="@+id/buttonSave"
                android:layout_weight="1"
                android:text="Save"
                android:onClick="buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="Maps"
                android:layout_weight="1"
                android:onClick="buttonMaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
</LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
